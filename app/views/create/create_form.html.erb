<div class="container">
  <%= form_tag("/create/create",{multipart:true}) do %>
    <div class="form">
      <fieldset>
        <legend></legend>
        <h4>-基本設定-</h4>
        <label for="name">名前<span>*</span>（最大１０文字）</label>
        <input class="board" name="name" id="name">      
        <label for="sex">性別</label>
        <input class="board" name="sex" id="sex">
        <label for="age">年齢</label>
