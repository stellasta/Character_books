        <input class="board" name="personality5" id="personality5">
        <label for="personality6">-詳細-</label>
        <input class="board" name="personality6" id="personality6">
        <label for="group">グループ名<span>*</span>（最大１０文字）</label>
        <input class="board" name="group" id="group" value="グループ1">
        <input type="submit" value="作成">
      </fieldset>
    </div>
  <% end %>
</div>
