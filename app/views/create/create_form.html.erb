        <input class="board" name="height" id="height">
        <label for="hair">髪</label>
        <input class="board" name="hair" id="hair">
        <label for="eye">瞳</label>
        <input class="board" name="eye" id="eye">
        <label for="skin">肌</label>
        <input class="board" name="skin" id="skin">
        <label for="form">体型</label>
        <input class="board" name="form" id="form">
        <label for="dress">服装</label>
        <input class="board" name="dress" id="dress">
        <label for="image">イメージ画像</label>
        <input type="file" name="image_name" id="image">
        <h4>-性格-</h4>
        <label for="personality1">性格➀</label>
        <input class="board" name="personality1" id="personality1">
        <label for="personality2">-詳細-</label>
        <input class="board" name="personality2" id="personality2">
        <label for="personality3">性格➁</label>
        <input class="board" name="personality3" id="personality3">
